        }

        .presentation {
            width: 100%;
            height: 100%;
            position: relative;
        }

        .slide {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            padding: 60px 100px;
            opacity: 0;
            visibility: hidden;
            transition: opacity 0.6s ease, transform 0.6s cubic-bezier(0.25, 1, 0.5, 1);
            transform: translateY(20px);
            display: flex;
            flex-direction: column;
        }

        .slide.active {
            opacity: 1;
            visibility: visible;
            transform: translateY(0);
            z-index: 10;
        }

        /* Typography & Components */
        h1 {
            font-size: 4rem;
            font-weight: 700;
            line-height: 1.1;
            letter-spacing: -0.02em;
            color: var(--accent-primary);
            /* Fallback */
            background: linear-gradient(135deg, var(--accent-primary) 0%, #020617 100%);
            -webkit-background-clip: text;
            background-clip: text;
            -webkit-text-fill-color: transparent;
            margin-bottom: 24px;
        }

        h2 {
            font-size: 2.4rem;
            font-weight: 600;
            color: var(--text-primary);
            /* Fallback */
            margin-bottom: 15px;
            display: flex;
            align-items: center;
            letter-spacing: -0.01em;
        }

        h2::after {
            content: '';
            flex: 1;
            height: 2px;
            background: linear-gradient(90deg, var(--accent-primary), transparent);
            margin-left: 30px;
            opacity: 0.3;
        }

        .subtitle {
            font-size: 1.5rem;
            color: var(--accent-secondary);
            font-weight: 500;
            margin-bottom: 40px;
            letter-spacing: 0.02em;
        }

        h3 {
            font-size: 1.25rem;
            font-weight: 700;
            margin-bottom: 12px;
            color: var(--text-primary);
        }

        p,
        li {
            font-size: 1.05rem;
            color: var(--text-secondary);
            margin-bottom: 10px;
        }

        .lead {
            font-size: 1.35rem;
            color: var(--text-secondary);
            max-width: 850px;
            margin-bottom: 40px;
            line-height: 1.5;
        }

        .card {
            background: var(--card-bg);
            backdrop-filter: blur(var(--glass-blur));
            -webkit-backdrop-filter: blur(var(--glass-blur));
            border-radius: 12px;
            padding: 28px;
            border: 1px solid var(--card-border);
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
            height: 100%;
            display: flex;
            flex-direction: column;
        }

        .grid-2 {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 30px;
            flex: 1;
            align-content: start;
        }

        .grid-3 {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 25px;
            flex: 1;
            align-content: start;
        }

        ul {
            list-style: none;
        }

        li {
            position: relative;
            padding-left: 20px;
            margin-bottom: 10px;
        }

        li::before {
            content: "•";
            position: absolute;
            left: 0;
            color: var(--accent-primary);
            font-weight: bold;
        }

        strong {
            color: var(--accent-primary);
            font-weight: 700;
        }

        /* Markdown Body */
        .markdown-body h1,
        .markdown-body h2,
        .markdown-body h3,
        .markdown-body h4,
        .markdown-body h5,
        .markdown-body h6 {
            color: var(--text-primary);
            margin-top: 1em;
            margin-bottom: 0.5em;
            line-height: 1.2;
        }

        .markdown-body h1 {
            font-size: 2.5rem;
        }

        .markdown-body h2 {
            font-size: 2rem;
        }

        .markdown-body h3 {
            font-size: 1.5rem;
        }

        .markdown-body h4 {
            font-size: 1.25rem;
        }

        .markdown-body p {
            margin-bottom: 1em;
        }

        .markdown-body ul,
        .markdown-body ol {
            margin-left: 20px;
            margin-bottom: 1em;
        }

        .markdown-body li {
            margin-bottom: 0.5em;
        }

        .markdown-body code {
            font-family: 'JetBrains Mono', monospace;
            font-size: 0.85em;
            color: #0f766e;
            background: #ccfbf1;
            padding: 2px 6px;
            border-radius: 4px;
            border: 1px solid #99f6e4;
        }

        .markdown-body pre {
            background-color: #282c34;
            padding: 1em;
            border-radius: 8px;
            overflow-x: auto;
            margin-bottom: 1em;
        }

        .markdown-body pre code {
            background-color: transparent;
            color: #abb2bf;
            padding: 0;
            border-radius: 0;
        }

        .markdown-body blockquote {
            border-left: 4px solid var(--accent-primary);
            padding-left: 1em;
            margin-left: 0;
            color: var(--text-secondary);
            font-style: italic;
        }

        .markdown-body table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 1em;
        }

        .markdown-body th,
        .markdown-body td {
            border: 1px solid var(--card-border);
            padding: 8px;
            text-align: left;
        }

        .markdown-body th {
            background-color: var(--card-bg);
            font-weight: 600;
        }

        .markdown-body a {
            color: var(--accent-primary);
            text-decoration: none;
        }

        .markdown-body a:hover {
            text-decoration: underline;
        }

        /* Mermaid Centering */
        .mermaid {
            display: flex;
            justify-content: center;
            width: 100%;
        }

        /* Process Steps */
        .process-container {
            display: flex;
            gap: 24px;
            margin: 30px 0;
        }

        .process-step {
            flex: 1;
            background: var(--card-bg);
            padding: 24px;
            border-radius: 12px;
            border: 1px solid var(--card-border);
            border-top: 4px solid var(--accent-tertiary);
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.04);
        }

        .process-step:nth-child(2) {
            border-top-color: var(--accent-secondary);
        }

        .process-step:nth-child(3) {
            border-top-color: var(--accent-primary);
        }

        .step-header {
            font-size: 0.85rem;
            text-transform: uppercase;
            letter-spacing: 1px;
            margin-bottom: 8px;
            color: var(--accent-primary);
            font-weight: 600;
        }

        /* Hero Meta */
        .meta-grid {
            display: flex;
            justify-content: center;
            align-items: center;
            text-align: center;
            border-top: 1px solid rgba(0, 0, 0, 0.1);
            padding-top: 40px;
            margin-top: auto;
        }

        .student-highlight h4 {
            font-size: 1.1rem;
            text-transform: uppercase;
            letter-spacing: 2px;
            color: var(--accent-primary);
            margin-bottom: 12px;
            font-weight: 800;
        }

        .student-highlight p {
            font-size: 2.2rem;
            color: var(--text-primary);
            font-weight: 700;
            line-height: 1.2;
            margin-bottom: 5px;
        }

        .id-badge {
            font-family: 'JetBrains Mono', monospace;
            background: rgba(13, 148, 136, 0.1);
            padding: 4px 12px;
            border-radius: 6px;
            color: var(--accent-tertiary);
            font-weight: 600;
        }

        /* Badges */
        .tech-stack {
            display: flex;
            flex-wrap: wrap;
            gap: 8px;
            margin-top: 15px;
        }

        .tech-badge {
            font-size: 0.8rem;
            padding: 4px 12px;
            border-radius: 100px;
            background: #ecfdf5;
            border: 1px solid #bbf7d0;
            color: #166534;
            font-weight: 600;
            letter-spacing: 0.5px;
        }

        /* Charts */
        .chart-container {
            position: relative;
            height: 60vh;
            width: 100%;
            display: flex;
            justify-content: center;
        }

        /* Animations */
        .stagger-1 {
            animation: fadeUp 0.8s cubic-bezier(0.2, 0.8, 0.2, 1) 0.1s forwards;
            opacity: 0;
            transform: translateY(20px);
        }

        .stagger-2 {
            animation: fadeUp 0.8s cubic-bezier(0.2, 0.8, 0.2, 1) 0.2s forwards;
            opacity: 0;
            transform: translateY(20px);
        }

        .stagger-3 {
            animation: fadeUp 0.8s cubic-bezier(0.2, 0.8, 0.2, 1) 0.3s forwards;
            opacity: 0;
            transform: translateY(20px);
        }

        @keyframes fadeUp {
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Utilità */
        .highlight-box {
            background: #f0fdf4;
            border: 1px solid #86efac;
            padding: 20px;
            border-radius: 8px;
            margin-top: auto;
        }
    </style>
</head>

<body>
    <div class="background-fx"></div>
    <div class="presentation">

        {% for slide in slides %}

        {% if slide.type == 'hero' %}
        <div class="slide {% if loop.first %}active{% endif %}">
            <div style="margin-top: auto; margin-bottom: auto; text-align: center;" class="stagger-1">
                <h1>{{ slide.title | safe }}</h1>
                <div class="subtitle">{{ slide.subtitle | safe }}</div>
            </div>
            {% if slide.meta_info %}
            <div class="meta-grid stagger-1">
                <div class="meta-item student-highlight">
                    <h4>{{ slide.meta_info.label }}</h4>
                    <p>{{ slide.meta_info.value }}</p>
                    {% if slide.meta_info.badge %}
                    <div><span class="id-badge">{{ slide.meta_info.badge }}</span></div>
                    {% endif %}
                </div>
            </div>
            {% endif %}
        </div>

        {% elif slide.type == 'grid' %}
        <div class="slide {% if loop.first %}active{% endif %}">
            <h2>{{ slide.title }}</h2>
            {% if slide.lead %}<div class="markdown-body lead stagger-1">{{ slide.lead | markdown }}</div>{% endif %}

            <div class="{% if slide.layout == '3-col' %}grid-3{% else %}grid-2{% endif %}">
                {% for card in slide.cards %}
                <div class="card stagger-{{ loop.index0 % 3 + 1 }}">
                    <h3>{{ card.title }}</h3>
                    {% if card.text %}<div class="markdown-body">{{ card.text | markdown }}</div>{% endif %}
                    {% if card.get('items') %}
                    <ul>
                        {% for item in card.get('items', []) %}
                        <li>
                            <div class="markdown-body" style="display:inline;">{{ item | markdown }}</div>
                        </li>
                        {% endfor %}
                    </ul>
                    {% endif %}
                </div>
                {% endfor %}
            </div>
        </div>

        {% elif slide.type == 'process' %}
        <div class="slide {% if loop.first %}active{% endif %}">
            <h2>{{ slide.title }}</h2>
            <div class="process-container stagger-1">
                {% for step in slide.steps %}
                <div class="process-step">
                    <div class="step-header">{{ step.header }}</div>
                    <h3>{{ step.title }}</h3>
                    <div class="markdown-body">{{ step.text | markdown }}</div>
                </div>
                {% endfor %}
            </div>

            {% if slide.footer_badges %}
            <div class="card" style="flex: 0 0 auto; height: auto; margin-top: 10px;">
                <h3
                    style="font-size: 1rem; text-transform: uppercase; letter-spacing: 1px; color: var(--accent-primary)">
                    {{ slide.footer_badges.title }}
                </h3>
                <div class="tech-stack">
                    {% for badge in slide.footer_badges.get('items', []) %}
                    <span class="tech-badge">{{ badge }}</span>
                    {% endfor %}
                </div>
            </div>
            {% endif %}
        </div>

        {% elif slide.type == 'chart' %}
        <div class="slide {% if loop.first %}active{% endif %}">
            <h2>{{ slide.title }}</h2>
            {% if slide.lead %}<div class="markdown-body lead stagger-1">{{ slide.lead | markdown }}</div>{% endif %}
            <div class="card chart-container stagger-2">
                <canvas id="chart-{{ loop.index }}"></canvas>
            </div>
            <script>
                document.addEventListener('DOMContentLoaded', function () {
                    const ctx = document.getElementById('chart-{{ loop.index }}').getContext('2d');
                    new Chart(ctx, {
                        type: '{{ slide.chart_type }}',
                        data: {
                            labels: {{ slide.labels | tojson }},
                    datasets: [{
                        label: '{{ slide.dataset_label }}',
                        data: {{ slide.data | tojson }},
                    backgroundColor: [
                        'rgba(21, 128, 61, 0.7)',
                        'rgba(13, 148, 136, 0.7)',
                        'rgba(22, 163, 74, 0.7)',
                        'rgba(2, 6, 23, 0.7)'
                    ],
                    borderColor: 'rgba(21, 128, 61, 1)',
                    borderWidth: 1
                            }]
                        },
                    options: {
                    responsive: true,
                    maintainAspectRatio: false
                }
                    });
                });
            </script>
        </div>

        {% elif slide.type == 'code' %}
        <div class="slide {% if loop.first %}active{% endif %}">
            <h2>{{ slide.title }}</h2>
            <pre class="stagger-1"><code class="language-{{ slide.language }}">{{ slide.code }}</code></pre>
        </div>

        {% elif slide.type == 'split' %}
        <div class="slide {% if loop.first %}active{% endif %}">
            <h2>{{ slide.title }}</h2>
            {% set text_order = 2 if slide.layout == 'text-right' else 1 %}
            {% set img_order = 1 if slide.layout == 'text-right' else 2 %}
            <div class="grid-2" style="align-items: center;">
                <div style="order: {{ text_order }}" class="stagger-1">
                    <div class="markdown-body">{{ slide.content | markdown }}</div>
                </div>
                <div style="order: {{ img_order }}" class="stagger-2">
                    <img src="{{ slide.image_url }}"
                        style="width: 100%; border-radius: 12px; box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);"
                        alt="Slide Image">
                </div>
            </div>
        </div>

        {% elif slide.type == 'mermaid' %}
        <div class="slide {% if loop.first %}active{% endif %}">
            <h2>{{ slide.title }}</h2>
            <div class="card stagger-1" style="display: flex; align-items: center; justify-content: center;">
                <div class="mermaid">
                    {{ slide.code }}
                </div>
            </div>
        </div>

        {% elif slide.type == 'table' %}
        <div class="slide {% if loop.first %}active{% endif %}">
            <h2>{{ slide.title }}</h2>
            {% if slide.lead %}<div class="markdown-body lead stagger-1">{{ slide.lead | markdown }}</div>{% endif %}
            <div class="card stagger-2">
                <table id="table-{{ loop.index }}">
                    <thead>
                        <tr>
                            {% for col in slide.columns %}
                            <th>{{ col }}</th>
                            {% endfor %}
                        </tr>
                    </thead>
                    <tbody>
                        {% for row in slide.rows %}
                        <tr>
                            {% for cell in row %}
                            <td>{{ cell }}</td>
                            {% endfor %}
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
                <script>
                    document.addEventListener('DOMContentLoaded', function () {
                        new simpleDatatables.DataTable("#table-{{ loop.index }}");
                    });
                </script>
            </div>
        </div>

        {% endif %}
        {% endfor %}

    </div>

    <script>
        // Script di navigazione (Standard, invariato)
        let currentSlideIndex = 0;
        const slides = document.querySelectorAll('.slide');

        function updateSlide(newIndex) {
            if (newIndex < 0 || newIndex >= slides.length) return;
            slides[currentSlideIndex].classList.remove('active');
            currentSlideIndex = newIndex;
            slides[currentSlideIndex].classList.add('active');
        }

        document.addEventListener('keydown', (e) => {
            if (['ArrowRight', ' ', 'PageDown'].includes(e.key)) updateSlide(currentSlideIndex + 1);
            if (['ArrowLeft', 'PageUp'].includes(e.key)) updateSlide(currentSlideIndex - 1);
        });

        // Inizializzazione KaTeX (Fix per versione portable)
        document.addEventListener('DOMContentLoaded', function () {
            if (typeof renderMathInElement === 'function') {
                renderMathInElement(document.body, {
                    delimiters: [
                        { left: '$$', right: '$$', display: true },
                        { left: '$', right: '$', display: false },
                        { left: '\\(', right: '\\)', display: false },
                        { left: '\\[', right: '\\[', display: true }
                    ],
                    throwOnError: false
                });
            }
        });
    </script>
</body>

</html>